<h1>Edit Article</h1>
<%= form_with model: @article do |form| %>
  <label for="inputPassword5" class="form-label">Title</label>
  <input value="<%= @article.title %>" type="text" name="article[title]" id="article_title" class="form-control" aria-describedby="passwordHelpBlock">
  <% @article.errors.full_messages_for(:title).each do |message| %>
    <div id="passwordHelpBlock" class="form-text">
      <%= message %>
    </div>
  <% end %>
  <div class="mb-3">
    <label for="exampleFormControlTextarea1" class="form-label">Example textarea</label>
    <textarea   class="form-control" name="article[body]" id="article_body" rows="3"><%= @article.body %> </textarea>
    <% @article.errors.full_messages_for(:body).each do |message| %>
      <div id="passwordHelpBlock" class="form-text">
        <%= message %>
      </div>
    <% end %>
  </div>
  <div>
    <input type="submit" name="commit" value="Create Article" data-disable-with="Create Article">
  </div>
<% end %>
